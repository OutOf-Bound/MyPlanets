<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/planetsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/the0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintCircle="@+id/sun"
            app:layout_constraintCircleAngle="0"
            app:layout_constraintCircleRadius="120dp">

            <ImageView
                android:id="@+id/mercury"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/mercury" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/the45"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintCircle="@+id/sun"
            app:layout_constraintCircleAngle="45"
            app:layout_constraintCircleRadius="120dp">

            <ImageView
                android:id="@+id/venus"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/venus" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/the90"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintCircle="@+id/sun"
            app:layout_constraintCircleAngle="90"
            app:layout_constraintCircleRadius="120dp">

            <ImageView
                android:id="@+id/earth"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/earth" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/the135"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintCircle="@+id/sun"
            app:layout_constraintCircleAngle="135"
            app:layout_constraintCircleRadius="120dp">

            <ImageView
                android:id="@+id/mars"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/mars" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/the180"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintCircle="@+id/sun"
            app:layout_constraintCircleAngle="180"
            app:layout_constraintCircleRadius="120dp">

            <ImageView
                android:id="@+id/jupiter"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/jupiter" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/the225"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintCircle="@+id/sun"
            app:layout_constraintCircleAngle="225"
            app:layout_constraintCircleRadius="120dp">

            <ImageView
                android:id="@+id/saturn"
                android:layout_width="98dp"
                android:layout_height="91dp"
                app:srcCompat="@drawable/saturn" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/the270"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintCircle="@+id/sun"
            app:layout_constraintCircleAngle="270"
            app:layout_constraintCircleRadius="120dp">

            <ImageView
                android:id="@+id/uran"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/uranus" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/the315"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintCircle="@+id/sun"
            app:layout_constraintCircleAngle="315"
            app:layout_constraintCircleRadius="120dp">

            <ImageView
                android:id="@+id/neptun"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/neptune" />
        </LinearLayout>

        <ImageView
            android:id="@+id/sun"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/sun" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
