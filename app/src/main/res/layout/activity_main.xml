<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_sun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:scaleType="center"
        app:borderWidth="1dp"
        app:elevation="1dp"
        app:fabCustomSize="52dp"
        app:layout_anchor="@id/bottomAppBar"
        app:maxImageSize="52dp"
        app:srcCompat="@android:drawable/ic_dialog_info"
        android:tint="@color/black"
        app:tint="@null" />

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        style="@style/Widget.MaterialComponents.BottomAppBar.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/leftStep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_counterclockwise" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                app:srcCompat="@android:drawable/ic_media_pause" />

            <ImageView
                android:id="@+id/rightStep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_clockwise" />

        </LinearLayout>
    </com.google.android.material.bottomappbar.BottomAppBar>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/planetsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/the1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintCircle="@+id/sun"
            app:layout_constraintCircleAngle="0"
            app:layout_constraintCircleRadius="120dp">

            <ImageView
                android:id="@+id/mercury"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/mercury" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/the2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintCircle="@+id/sun"
            app:layout_constraintCircleAngle="45"
            app:layout_constraintCircleRadius="120dp">

            <ImageView
                android:id="@+id/venus"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/venus" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/the3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintCircle="@+id/sun"
            app:layout_constraintCircleAngle="90"
            app:layout_constraintCircleRadius="120dp">

            <ImageView
                android:id="@+id/earth"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/earth" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/the4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintCircle="@+id/sun"
            app:layout_constraintCircleAngle="135"
            app:layout_constraintCircleRadius="120dp">

            <ImageView
                android:id="@+id/mars"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/mars" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/the5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintCircle="@+id/sun"
            app:layout_constraintCircleAngle="180"
            app:layout_constraintCircleRadius="120dp">

            <ImageView
                android:id="@+id/jupiter"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/jupiter" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/the6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintCircle="@+id/sun"
            app:layout_constraintCircleAngle="225"
            app:layout_constraintCircleRadius="120dp">

            <ImageView
                android:id="@+id/saturn"
                android:layout_width="98dp"
                android:layout_height="91dp"
                app:srcCompat="@drawable/saturn" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/the7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintCircle="@+id/sun"
            app:layout_constraintCircleAngle="270"
            app:layout_constraintCircleRadius="120dp">

            <ImageView
                android:id="@+id/uran"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/uranus" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/the8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintCircle="@+id/sun"
            app:layout_constraintCircleAngle="315"
            app:layout_constraintCircleRadius="120dp">

            <ImageView
                android:id="@+id/neptun"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/neptune" />
        </LinearLayout>

        <ImageView
            android:id="@+id/sun"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/sun" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
